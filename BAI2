using namespace std;

const int N = 1e3 + 5;

/*-------------// Variables \\--------------*/
    string a[N];
/*------------------------------------------*/

void solve()
{
    string s;
    int i = 0, ans = 0;

    while(cin >> s)
    {
        s = '0' + s; a[++i] = s;

        for(int j = 1; j < len(s); j++)
        {
            if (a[i][j] == '0') continue;

            if (i == 1) ans += (a[i][j-1] == '0');
            else ans += (a[i][j-1] == '0' && a[i-1][j] == '0');
        }
    }

    cout << ans;
}

int32_t main()
{
    Fast;
    File("BAI2")
    // freopen("test.inp", "r", stdin);
    // int t; cin >> t; while(t--)
        solve();
    End;
}
